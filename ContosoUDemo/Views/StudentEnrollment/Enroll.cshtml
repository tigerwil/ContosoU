@model ContosoUDemo.Models.Course
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Enrollment</h4>
        <hr />
        <p class="text-danger">
            @*@ViewBag.AlreadyEnrolledError*@
            @Html.ValidationMessage("AlreadyEnrolled")

        </p>
        @Html.HiddenFor(model => model.CourseID)
        <input type="hidden" name="StudentID" id="StudentID" value="@ViewBag.StudentID" />

        <div class="form-group">
            <label class="col-md-2">Selected Course:</label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        @*@if (ViewBag.AlreadyEnrolledError != "You are already enrolled in this course")*@
        @if (ViewData.ModelState.IsValid)
        {
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enroll" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
