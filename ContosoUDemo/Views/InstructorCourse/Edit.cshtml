@model ContosoUDemo.Models.Enrollment

@{
    ViewBag.Title = "Edit Grade";
}

<h2>Edit Grade</h2>
<hr />

<h3>@Html.DisplayFor(model => model.Student.FullName)</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.EnrollmentID)
        <div class="form-group">
            <label for="Grade">@Html.DisplayFor(model => model.Course.Title)</label>
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Grade, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Grade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Courses", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


